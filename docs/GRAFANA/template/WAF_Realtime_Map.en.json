            "uid": "${DS_WAF_INFLUXDB}"
          },
          "query": "import \"strings\"\n\nfrom(bucket: \"waf-realtime\")\n  |> range(start: -30m)\n  |> filter(fn: (r) => r._measurement == \"waf_events\")\n  // 필드들을 가로로 펼쳐서 한 행에 모으기\n  |> pivot(rowKey: [\"_time\"], columnKey: [\"_field\"], valueColumn: \"_value\")\n  // 모든 그룹을 하나로 합쳐서 전역 최신순 정렬/limit 적용\n  |> group(columns: [])\n  |> sort(columns: [\"_time\"], desc: true)\n  // 한 줄 메시지 생성 (필드/태그 이름은 환경에 맞춰 수정 가능)\n  |> map(fn: (r) => ({\n      _time: r._time,\n      _value: strings.joinStr(\n        arr: [\n          string(v: r._time),\n          \"ip=\" + (if exists r.client_ip then r.client_ip else \"\"),\n          \"method=\" + (if exists r.method then r.method else \"\"),\n          \"uri=\" + (\n            if exists r.request_uri then r.request_uri\n            else if exists r.uri then r.uri\n            else \"\"\n          ),\n          \"status=\" + (if exists r.status then string(v: r.status) else \"\"),\n          \"severity=\" + (if exists r.severity_level then r.severity_level else \"\"),\n          \"score=\" + (if exists r.anomaly_score then string(v: r.anomaly_score) else \"\")\n        ],\n        v: \" \"\n      )\n  }))\n  |> keep(columns: [\"_time\",\"_value\"])\n  |> limit(n: 50)\n",
          "refId": "A"
        }
      ],
      "title": "Real-time Event Table (30M)",
      "type": "table"
