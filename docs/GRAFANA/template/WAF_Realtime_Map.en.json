        {
          "datasource": {
            "type": "influxdb",
            "uid": "${DS_WAF_INFLUXDB}"
          },
          "query": "from(bucket: \"waf-realtime\")\n    |> range(start: -6h)\n    |> filter(fn: (r) => r._measurement == \"waf_events\")\n    |> filter(fn: (r) => r._field == \"geo_latitude\" or r._field == \"geo_longitude\")\n    |> pivot(\n        rowKey: [\"_time\"],\n        columnKey: [\"_field\"],\n        valueColumn: \"_value\"\n    )\n    |> group(columns: [\"geo_country\", \"geo_city\"])\n    |> reduce(\n        identity: {count: 0, lat_sum: 0.0, lon_sum: 0.0, cnt: 0},\n        fn: (r, accumulator) => ({\n          count: accumulator.count + 1,\n          lat_sum: accumulator.lat_sum + r.geo_latitude,\n          lon_sum: accumulator.lon_sum + r.geo_longitude,\n          cnt: accumulator.cnt + 1\n        })\n    )\n    |> map(fn: (r) => ({\n        geo_country: r.geo_country,\n        geo_city: r.geo_city,\n        attack_count: r.count,\n        avg_latitude: r.lat_sum / float(v: r.cnt),\n        avg_longitude: r.lon_sum / float(v: r.cnt)\n    }))\n    |> group()\n    |> sort(columns: [\"attack_count\"], desc: true)",
          "refId": "A"
        }
      ],
